let index = 0;
let score = 0;

const questionEl = document.getElementById("question");
const optionsEl = document.getElementById("options");
const nextBtn = document.getElementById("next-btn");
const scoreEl = document.getElementById("score");

function loadQuestion() {
  const q = quizData[index];
  questionEl.innerHTML = `<b>${q.apartado}</b><br>${q.pregunta}`;
  optionsEl.innerHTML = "";

  q.opciones.forEach((opt, i) => {
    const div = document.createElement("div");
    div.className = "option";
    div.innerText = opt;
    div.onclick = () => selectOption(i);
    optionsEl.appendChild(div);
  });
}

function selectOption(i) {
  const q = quizData[index];
  const options = document.querySelectorAll(".option");

  options.forEach((opt, idx) => {
    opt.style.pointerEvents = "none";
    if (idx === q.correcta) opt.style.background = "#c3ffdd";
    if (idx === i && idx !== q.correcta) opt.style;background = "#ffb3c6";
  });

  if (i === q.correcta) score++;

  nextBtn.style.display = "block";
}

nextBtn.onclick = () => {
  index++;
  nextBtn.style.display = "none";
  if (index >= quizData.length) endQuiz(); else loadQuestion();
};

function endQuiz() {
  questionEl.style.display = "none";
  optionsEl.style.display = "none";
  nextBtn.style.display = "none";
  scoreEl.style.display = "block";
  scoreEl.innerHTML = `Tu puntuación final es <br><b>${score} / ${quizData.length}</b>`;
}

loadQuestion();
</script>
</body>
